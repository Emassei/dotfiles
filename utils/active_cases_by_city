chosen=$(printf "Circasia\\nFilandia\\nArmenia\\nSalento" "$screens" | dmenu -i -p "Select a City to view:") &&

if [ "$chosen" == "Circasia" ]; then
  city=$(circasia)
elif [ "$chosen" == "Filandia" ]; then
  city=$(filandia)
elif [ "$chosen" == "Armenia" ]; then
  city=$(armenia)
else
  city=$(salento)
fi

city=$(echo $city |tr , '\n' | grep -A 5 'Hospital' | sed "s/^{.*\[//g; s/\"C\":\[//g; s/].*//g; s/\"//g; s/IC:.*//g; s/HAD.*//g" )

total=$(echo $city | tr -d -c 0-9)




# awk '{ sum += $1} end { print sum }') adds all of the lines together
# sed -n n;p = prints every even numbered line

#difference=$(diff <(echo "$results") <(head -n 1 $XDG_CACHE_HOME/active_cases) | wc -l)

#if (( difference > 0 )); then
  ## sed inserts the results and a new line into the active_cases file
  #sed -i "1s/^/$results\n /" $XDG_CACHE_HOME/active_cases
#fi

## working the math between the stored value and the new one to get the change
#change=$(head -n 2 $XDG_CACHE_HOME/active_cases | awk '{print $1}' | paste -sd- - | bc)

#if [[ $change =~ "-" ]]; then
  #change=$(echo $change | sed 's/-//g')
#else
  #change=$(echo '' $change)
#fi

echo $city $total
